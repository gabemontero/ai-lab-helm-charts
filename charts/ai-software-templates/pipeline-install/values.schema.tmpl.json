{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "tekton": {
      "type": "object",
      "properties": {
        "gitAppId": {
          "type": "string",
          "description": "[REQUIRED] The GitHub Application ID"
        },
        "gitAppWebhookSecret": {
          "type": "string",
          "description": "[REQUIRED] The GitHub Application Webhook Secret"
        },
        "gitAppPrivateKey": {
          "type": "string",
          "description": "[REQUIRED] The GitHub Application Private Key"
        }
      },
      "required": ["gitAppId", "gitAppWebhookSecret", "gitAppPrivateKey"]
    }
  }
}
